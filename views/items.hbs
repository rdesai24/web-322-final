<h2 class="text-success">Inventory</h2>

<a href="/Items/add" class="btn btn-primary mb-3">Add Product</a>

{{#if items}}
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th>Price</th>
        <th>Published</th>
        <th>Category</th>
        <th>Image</th>
        <th>Remove</th>
      </tr>
    </thead>
    <tbody>
      {{#each items}}
        <tr>
          <td>{{this.title}}</td>
          <td>{{this.body}}</td>
          <td>${{this.price}}</td>
          <td>{{#if this.published}}Yes{{else}}No{{/if}}</td>
          <td>
            {{#if this.Category}}
              {{this.Category.category}}
            {{else}}
              <span class="text-muted">No category</span>
            {{/if}}
          </td>
          <td>
            {{#if this.featureImage}}
              <img src="{{this.featureImage}}" alt="{{this.title}}" style="max-height: 50px;" />
            {{else}}
              <span class="text-muted">No Image</span>
            {{/if}}
          </td>
          <td>
            <a href="/Items/delete/{{this.id}}" class="btn btn-danger btn-sm">Remove</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p class="text-muted">{{message}}</p>
{{/if}}
